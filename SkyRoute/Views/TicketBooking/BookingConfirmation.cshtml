@model SkyRoute.ViewModels.BookingVM

@{
    ViewData["Title"] = "Boekingsbevestiging";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-success">Boekingsbevestiging</h2>
        <p>Bedankt voor je boeking!. Wij hebben jouw ticket(s) al per email naar je verzonden. Hieronder vind je je bookingsgegevens.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4>Boekingsinformatie</h4>
            <p><strong>Referentie:</strong> @Model.Reference</p>
            <p><strong>Datum:</strong> @Model.BookingDate.ToString("dd-MM-yyyy HH:mm")</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Terug naar startpagina</a>
    </div>
</div>
