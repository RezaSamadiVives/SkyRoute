@{
    ViewData["Title"] = "Fouten bij boeken";
}

<div class="container mt-5">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="card border-danger mb-3">
            <div class="card-header bg-danger text-white">
                Fout bij boeken
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
                <p class="mt-3">Probeer het opnieuw door terug te gaan naar de boekingspagina.</p>
                <a href="@Url.Action("Index", "OrderSummary")" class="btn btn-primary">Terug naar boeking</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Er zijn geen fouten.
        </div>
    }
</div>
