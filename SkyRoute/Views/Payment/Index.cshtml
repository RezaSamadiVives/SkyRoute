@model SkyRoute.ViewModels.PaymentVM

@{
    ViewData["Title"] = "Betaling verwerken";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Betaling verwerken</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessPayment" method="post">
                        <div class="mb-3">
                            <label asp-for="IBAN" class="form-label"></label>
                            <input asp-for="IBAN" class="form-control" />
                            <span asp-validation-for="IBAN" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rekeninghouder" class="form-label"></label>
                            <input asp-for="Rekeninghouder" class="form-control" />
                            <span asp-validation-for="Rekeninghouder" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Bank" class="form-label"></label>
                            <input asp-for="Bank" class="form-control" />
                            <span asp-validation-for="Bank" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <p>@Model.Amount.ToString()</p>
                          @*   <input asp-for="Amount" class="form-control" readonly />
                            <span asp-validation-for="Amount" class="text-danger"></span> *@
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="ToestemmingCheckbox" />
                            <label class="form-check-label" for="ToestemmingCheckbox">
                                Ik geef toestemming dat <strong>@Model.Amount.ToString("C")</strong> automatisch van mijn rekening wordt afgeschreven.
                            </label>
                        </div>

                        <button type="submit" class="btn btn-success w-100" id="BetalingButton" disabled>
                            Betaling verwerken
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/payment.js?v=@DateTime.Now.Ticks"></script>
}

