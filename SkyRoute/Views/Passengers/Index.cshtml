@model SkyRoute.ViewModels.PassengerListVM

<main>
    <div class="container py-5">
        @await Html.PartialAsync("_BookingWizard", "passengers")



        <form asp-action="Index" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="d-flex justify-content-end mb-3">
                <button type="submit" name="action" value="add" class="btn btn-success">
                    <i class="bi bi-person-plus"></i> Voeg passagier toe
                </button>
            </div>

            @for (int i = 0; i < Model.Passengers.Count; i++)
            {
                var viewData = new ViewDataDictionary(ViewData)
                {
                    TemplateInfo = { HtmlFieldPrefix = $"Passengers[{i}]" }
                };
                
                viewData["CanRemove"] = Model.Passengers.Count > 1;
                viewData["readOnly"] = false;
                @await Html.PartialAsync("_PassengerFormPartial", Model.Passengers[i], viewData)
            }

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Doorgaan naar volgende stap
                </button>
            </div>
        </form>
    </div>
</main>