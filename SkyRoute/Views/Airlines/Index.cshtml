@model IEnumerable<SkyRoute.ViewModels.AirlineVM>

@{
    ViewData["Title"] = "Vliegtuigmaatschappijen";
}

<main>
    <section class="sectionInfo p-4">
        <h2>Boek jouw vlucht eenvoudig en snel</h2>
        <p>
            Ontdek een ruime selectie van luchtvaartmaatschappijen en vind de beste vliegtickets voor jouw volgende reis. Vergelijk prijzen, bekijk routes en boek direct via ons gebruiksvriendelijke platform.
        </p>
    </section>

    <section class="container py-5">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100">
                        <img src="@item.LogoUrl" class="card-img-top" alt="Logo van @item.Name" style="height: 150px; object-fit: contain; padding: 1rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</main>

