@model (SkyRoute.ViewModels.FlightVM Flight, List<(SkyRoute.ViewModels.PassengerVM Passenger,
SkyRoute.ViewModels.MealOptionVM Meal)> PassengerMeals)

<div class="col-12">
    <div class="card shadow-sm animate-fade-in">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title mb-1">
                        @Model.Flight.FromCity.Name â†’ @Model.Flight.ToCity.Name
                    </h5>
                    @foreach(var passenger in Model.PassengerMeals)
                                        {
                    <p class="card-text text-muted mb-0">
                        <strong>@passenger.Passenger.FirstName @passenger.Passenger.MiddelName
                            @passenger.Passenger.LastName</strong> Gekozen maaltijd: <strong
                            class="card-title">@passenger.Meal.Name</strong>
                    </p>
                                        }
                </div>
            </div>
        </div>
    </div>
</div>