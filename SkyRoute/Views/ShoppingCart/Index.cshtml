@model SkyRoute.ViewModels.ShoppingCartVM
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-5">
    @await Html.PartialAsync("_BookingWizard", "overzicht")
</div>

<h2 class="mb-4">ðŸ›’ Shopping Cart</h2>
@Html.AntiForgeryToken()

@if (Model.OutboundFlights?.Flights?.Count > 0)
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Heenreis</strong>
            <button class="btn btn-sm btn-danger" onclick="removeFlightSegment('outbound')">
                <i class="fa fa-trash"></i> Verwijder
            </button>
        </div>
        <div class="card-body">
            <p><strong>Vluchten:</strong> @string.Join(", ", Model.OutboundFlights.Flights)</p>
            <p><strong>Vluchten:</strong> @Model.FlightSearchSessionVM?.FromCity - @Model.FlightSearchSessionVM?.ToCity</p>
            <p><strong>Prijs:</strong> â‚¬@Model.OutboundFlights.TotalPrice.ToString("0.00")</p>
        </div>
    </div>
}

@if (Model.RetourFlights?.Flights?.Count > 0)
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Terugreis</strong>
            <button class="btn btn-sm btn-danger" onclick="removeFlightSegment('retour')">
                <i class="fa fa-trash"></i> Verwijder
            </button>
        </div>
        <div class="card-body">
            <p><strong>Vluchten:</strong> @string.Join(", ", Model.RetourFlights.Flights)</p>
            <p><strong>Vluchten:</strong> @Model.FlightSearchSessionVM?.ToCity - @Model.FlightSearchSessionVM?.FromCity</p>
            <p><strong>Prijs:</strong> â‚¬@Model.RetourFlights.TotalPrice.ToString("0.00")</p>
        </div>
    </div>
}

@if (Model.Passengers?.Count > 0)
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center"><strong>Passagiers</strong></div>
        <div class="card-body">
            @foreach (var passenger in Model.Passengers)
            {
                <p>@passenger.FirstName @passenger.LastName</p>
            }

        </div>
    </div>
}

<div class="text-end mt-3">
    <h4>Totaal: â‚¬ @Model.Total.ToString("0.00")</h4>
    @if (Model.IsConfirmed)
    {
        <form method="post" asp-controller="ShoppingCart" asp-action="Buy">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">
                Kopen
            </button>
        </form>
    }
    else
    {
        @if (Model.Passengers?.Count <= 0)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", "Passengers")">
                Voeg passagiers toe
            </a>
        }
        else if (Model.MealChoicePassengerSessions.Count <= 0)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", "MealOption")">
                Voeg maaltijd toe
            </a>
        }
        else
        {
            <a class="btn btn-primary" href="@Url.Action("Index", "OrderSummary")">
                Bevestig je boeking
            </a>
        }

    }
</div>



<!-- Modal -->
<div class="modal fade" id="removeModal" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-success text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="removeModalLabel">Verwijderd</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Sluiten"></button>
            </div>
            <div class="modal-body">
                Het item is succesvol uit de winkelwagen verwijderd.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/shoppingcart.js?v=@DateTime.Now.Ticks"></script>
}
